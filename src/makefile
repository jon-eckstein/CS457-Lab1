WORKDIR = `pwd`

CC = gcc
CXX = g++
AR = ar
LD = g++
WINDRES = windres

INC = 
CFLAGS =  -Wall -fexceptions
RESINC = 
LIBDIR = 
LIB = 
LDFLAGS = 

INC_DEBUG =  $(INC)
CFLAGS_DEBUG =  $(CFLAGS) -g
RESINC_DEBUG =  $(RESINC)
RCFLAGS_DEBUG =  $(RCFLAGS)
LIBDIR_DEBUG =  $(LIBDIR)
LIB_DEBUG = $(LIB)
LDFLAGS_DEBUG =  $(LDFLAGS)
OBJDIR_DEBUG = obj
DEP_DEBUG = 
OUT_DEBUG_CLIENT = proj1_client
OUT_DEBUG_SERVER = proj1_server
OBJ_DEBUG_CLIENT = $(OBJDIR_DEBUG)/main_client.o
OBJ_DEBUG_SERVER = $(OBJDIR_DEBUG)/main_server.o
SERVER_LOCATION = server/
CLIENT_LOCATION = client/

all: debug

clean: clean_debug

before_debug: 
	test -d $(OBJDIR_DEBUG) || mkdir -p $(OBJDIR_DEBUG)

after_debug: 

debug: before_debug out_debug_client out_debug_server after_debug

out_debug_client: $(OBJ_DEBUG_CLIENT) $(DEP_DEBUG)
	$(LD) $(LDFLAGS_DEBUG) $(LIBDIR_DEBUG) $(OBJ_DEBUG_CLIENT) $(LIB_DEBUG) -o $(OUT_DEBUG_CLIENT)

out_debug_server: $(OBJ_DEBUG_SERVER) $(DEP_DEBUG)
	$(LD) $(LDFLAGS_DEBUG) $(LIBDIR_DEBUG) $(OBJ_DEBUG_SERVER) $(LIB_DEBUG) -o $(OUT_DEBUG_SERVER)

$(OBJDIR_DEBUG)/main_client.o: $(CLIENT_LOCATION)/main.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c $(CLIENT_LOCATION)/main.cpp -o $(OBJDIR_DEBUG)/main_client.o

$(OBJDIR_DEBUG)/main_server.o: $(SERVER_LOCATION)/main.cpp
	$(CXX) $(CFLAGS_DEBUG) $(INC_DEBUG) -c $(SERVER_LOCATION)/main.cpp -o $(OBJDIR_DEBUG)/main_server.o


clean_debug: 
	rm -f $(OBJ_DEBUG_CLIENT) $(OUT_DEBUG_CLIENT)
	rm -f $(OBJ_DEBUG_SERVER) $(OUT_DEBUG_SERVER)
	rm -rf $(OBJDIR_DEBUG)

.PHONY: before_debug after_debug clean_debug

